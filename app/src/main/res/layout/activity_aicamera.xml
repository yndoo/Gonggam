<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AicameraActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bar_aicamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_aicamera"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사람인식"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_gravity = "center"
            />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tv_ex"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:text="화면이 보일 곳"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar_aicamera" />

    <Chronometer
        android:id="@+id/chronometer_watch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ex" />

</androidx.constraintlayout.widget.ConstraintLayout>