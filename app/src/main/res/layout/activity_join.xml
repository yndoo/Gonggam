<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity">

    <EditText
        android:id="@+id/et_join_id"
        android:layout_width="246dp"
        android:layout_height="33dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/login_rectangle"
        android:ems="10"
        android:gravity="center"
        android:hint="ID"
        android:textColor="#000000"
        android:textColorHint="#4E4E4E"
        android:textColorLink="#809AE0"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/et_join_pw"
        android:layout_width="246dp"
        android:layout_height="33dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/login_rectangle"
        android:ems="10"
        android:gravity="center"
        android:hint="PW"
        android:textColor="#000000"
        android:textColorHint="#4E4E4E"
        android:textColorLink="#809AE0"
        android:textSize="15sp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_join_id" />

    <EditText
        android:id="@+id/et_join_name"
        android:layout_width="246dp"
        android:layout_height="33dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/login_rectangle"
        android:ems="10"
        android:gravity="center"
        android:hint="별명"
        android:textColor="#000000"
        android:textColorHint="#4E4E4E"
        android:textColorLink="#809AE0"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_join_pw" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="149dp"
        android:layout_height="47dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/login_button"
        android:text="회원가입"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_join_name" />

    <Button
        android:id="@+id/btn_gotologin"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="이미 계정이 있다면?"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_join" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="235dp"
        android:layout_height="235dp"
        android:layout_marginTop="64dp"
        app:layout_constraintBottom_toTopOf="@+id/et_join_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gonggam_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>